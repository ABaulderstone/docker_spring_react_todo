<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="APP_LOG_ROOT">/app/logs</Property>
        <Property name="CI_LOG_ROOT">${sys:CI_LOG_DIRECTORY:-/app/logs}</Property>
        <!-- Define the actual log directory to use based on environment -->
        <Property name="ACTUAL_LOG_ROOT">${if:sys:CI_ENVIRONMENT:-false}${CI_LOG_ROOT}${sys:CI_ENVIRONMENT:-false}${APP_LOG_ROOT}</Property>
    </Properties>
    
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        
        <RollingFile name="appLog"
                     fileName="${ACTUAL_LOG_ROOT}/application-${date:yyyy-MM-dd}.log"
                     filePattern="${ACTUAL_LOG_ROOT}/application-%d{yyyy-MM-dd}-%i.log"
                     >
                     
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        
        <RollingFile name="errorLog"
                     fileName="${ACTUAL_LOG_ROOT}/error-${date:yyyy-MM-dd}.log"
                     filePattern="${ACTUAL_LOG_ROOT}/error-%d{yyyy-MM-dd}-%i.log"
                     >
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="appLog"/>
            <AppenderRef ref="errorLog" level="error"/>
        </Root>
    </Loggers>
</Configuration>